<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConlagoS__Liga_Pro_de_Ecuador</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConlagoS__Liga_Pro_de_Ecuador.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Montserrat&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-dark">
            <div class="d-flex flex-column align-items-center justify-content-center text-center">
                <a class="navbar-brand text-white mb-1" asp-area="" asp-controller="Home" asp-action="Index">
                    ConlagoS__Liga_Pro_de_Ecuador
                </a>
                <a class="nav-link text-white" asp-area="" asp-controller="Equipo" asp-action="List">
                    Equipo
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ConlagoS__Liga_Pro_de_Ecuador - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
